<div class="page-header">
  <%= link_to projects_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    戻る
  <% end %>

  <h1>新規プロジェクト登録</h1>
  <p>登録するプロジェクトを選択してください.</p>
</div>

<%= form_for(@project, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <div class="form-group">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>プロジェクト名</th>
          </tr>
        </thead>

        <tbody>
          <% @project_info[:projects].each do |project| %>
            <% name = project['name'] %>
            <tr>
             <td><label><%= f.radio_button :name, name %><%= ' '+name %></label></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= f.hidden_field :ticket_repository_id, :value => @authorized_key[:ticket_repository_id] %>
    <div class="col-sm-10">
      <%= f.submit "登録", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
