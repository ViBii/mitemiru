<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label">プロジェクト名<font color='red'>(必須)</font></label>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control", id: "name", placeholder: "◯ ◯ ◯ プロジェクト" %>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">プロジェクト開始日<br><font color="red">(必須)</font></label>
      <div class="col-sm-2 input-group date">
        <%= f.text_field :project_start_date, class: "form-control", id: "project_start_date", readonly: true %>
        <span class="input-group-addon datetimepicker"><span class="glyphicon glyphicon-calendar"></span></span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
