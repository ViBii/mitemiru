<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>

      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "プロジェクト名前", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%= f.label "バージョン管理ツール", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :version_repository_id, class: "form-control" %>
    </div>
    <%= f.label "チケット管理ツール", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ticket_repository_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "作成", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
