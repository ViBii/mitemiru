<p>
  GitHubへの認証に必要な情報をを入力してください。
</p>
<%= form_tag('/projects') do %>
  <% @scope_projects.each do |scope_project| %>
    <div class="form-group">
      <div class="table-responsive">
        <div class="form-group">
          <label class="col-sm-2 control-label">プロジェクト名</label>
          <div class="col-sm-8">
            <%= text_field_tag "github_info[][name]", nil, id: "name", class: "form-control", value: scope_project %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <label class="col-sm-2 control-label">ＵＲＬ</label>
          <div class="col-sm-8">
            <%= text_field_tag "github_info[][url]", nil, id: "url", class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <label class="col-sm-2 control-label">ログイン名</label>
          <div class="col-sm-5">
            <%= text_field_tag "github_info[][login_id]", nil, id: "login_id", class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <label class="col-sm-2 control-label">パスワード</label>
          <div class="col-sm-5">
            <%= text_field_tag "github_info[][password_digest]", nil, id: "password_digest", class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= hidden_field_tag :url, @url %>
  <%= hidden_field_tag :login_id, @login_id %>
  <%= hidden_field_tag :password_digest, @password_digest %>
  <%= hidden_field_tag :api_key, @api_key %>
  <%= submit_tag "登録", class: "btn btn-primary" %>
<% end %>
