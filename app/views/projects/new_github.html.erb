<div class="page-header">
  <%= link_to projects_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      戻る
  <% end %>
  <h3>プロジェクトの名前:<%= @project.name %></h3>
</div>
<br>
<%= form_tag '/projects/auth_github' do %>
  <div class="form-group">
    <div class="col-sm-5">
      <input type="hidden" name="name" class="form-control" id="name" value= <%= @project.name %> />
    </div>
  </div>
  <br>
  <div class="form-group">
    <label class="col-sm-2 control-label">プロジェクト名</label>
    <div class="col-sm-5">
      <input type="text" name="github_project_name" class="form-control" id="github_project_name" />
    </div>
  </div>
  <br>
  <div class="form-group">
    <label class="col-sm-2 control-label">リポジトリ名</label>
    <div class="col-sm-5">
      <input type="text" name="github_repo" class="form-control" id="github_repo" />
    </div>
  </div>
  <br>
  <div class="form-group">
    <label class="col-sm-2 control-label">ログイン名</label>
    <div class="col-sm-5">
      <input type="text" name="github_login_id" class="form-control" id="github_login_id" />
    </div>
  </div>
  <br>
  <div class="form-group">
    <label class="col-sm-2 control-label">パスワード</label>
    <div class="col-sm-5">
      <input type="password" name="github_password_digest" class="form-control" id="password_digest" />
    </div>
  </div>
  <br>
  <div class="col-sm-10">
    <input type="submit" value="認証する" id="new_project_button" class="btn btn-primary" />
  </div>
<% end %>
