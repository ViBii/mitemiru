<div class="page-header">
  <%= link_to projects_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      戻る
  <% end %>
  <h3>プロジェクトの名前:<%= @project.name %></h3>
</div>
<br>
<%= form_tag '/projects/auth_redmine' do %>
  <div class="form-group">
    <div class="col-sm-5">
      <input type="hidden" name="name" class="form-control" id="name" value= <%= @project.name %> />
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <label class="col-sm-2 control-label">URL</label>
    <div class="col-sm-5">
      <input type="text" name="redmine_url" class="form-control" id="redmine_url" value="<%= @ticket_repository.host_name + '/projects/' + @ticket_repository.project_name %>"/>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <label class="col-sm-2 control-label">ログイン名</label>
    <div class="col-sm-5">
      <input type="text" name="redmine_login_id" class="form-control" id="redmine_login_id" value="<%= @redmine_key.login_id %>"/>
    </div>
  </div>
  <br>
  <br>
  <div class="form-group">
    <label class="col-sm-2 control-label">パスワード</label>
    <div class="col-sm-5">
      <input type="password" name="redmine_password_digest" class="form-control" id="password_digest" />
    </div>
  </div>
  <br>
  <div class="col-sm-10">
    <input type="submit" value="変更する" id="new_project_button" class="btn btn-primary" />
  </div>
<% end %>
