<div class="page-header">
  <%= link_to new_project_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    新規プロジェクト追加
  <% end %>
  <h1>プロジェクト一覧</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>プロジェクト名前</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @projects) do |project| %>
        <td><%= link_to project.name, project %></td>
        <td>
            <%= link_to image_tag('blue_edit.png', { :border => '0', :alt => 'change'}), edit_project_path(project) %>
            <%= link_to image_tag('blue_delete.png', { :border => '0', :alt => 'change'}), project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
