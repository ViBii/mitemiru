<div class="page-header">
  <%= link_to '/ticket_repositories/new', class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    認証情報新規登録
  <% end %>
  <h1>Redmine認証情報一覧</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ログイン名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @redmine_keys) do |redmine_key| %>
        <td><%= redmine_key.login_id %></td>
        <td><%= link_to '詳細', redmine_key %></td>
        <td><%= link_to '削除', redmine_key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
