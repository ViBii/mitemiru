<%= render(:partial => "./layouts/header", :locals => {:selected_value => "", :show_header => false}) %>

<h2>ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.text_field :login_id, autofocus: true, class: 'form-control',
    required: true, placeholder: 'ログインID' %></p>
  <p><%= f.password_field :password, class: 'form-control',
    required: true, placeholder: 'パスワード' %></p>
  <p><%= f.password_field :password_confirmation, class: 'form-control',
    required: true, placeholder: '確認用パスワード' %></p>

  <%= f.submit "ユーザー登録する", class: 'btn btn-lg btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
