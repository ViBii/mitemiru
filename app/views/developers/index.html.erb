<div class="page-header">
  <%= link_to '/developers/auth', class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    新規開発者追加
  <% end %>
  <h1>開発者一覧</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @developers) do |developer| %>
        <td><%= link_to developer.name, developer %></td>
        <td><%= developer.adress %></td>
        <td>
            <%= link_to image_tag('blue_edit.png', { :border => '0', :alt => 'change'}), edit_developer_path(developer) %>
            <%= link_to image_tag('blue_delete.png', { :border => '0', :alt => 'delete'}), developer, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </tbody>
  </table>
</div>
