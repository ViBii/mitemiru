<%= form_for(@ticket_repository, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @ticket_repository.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@ticket_repository.errors.count, "error") %> prohibited this ticket repository from being saved:</h4>

      <ul>
        <% @ticket_repository.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= link_to '/redmine_keys/new', class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Skip
  <% end %>
  <div class="form-group">
    <%= f.label :url, "URL", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "登録", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>登録済みリポジトリ</th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @ticket_info) do |ticket_info| %>
          <td><%= ticket_info.url %></td>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
